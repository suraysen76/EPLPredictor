@model SS1892.EPLPredictor.Models.PredictionModel

@{
    ViewData["Title"] = "MyPrediction";
    string fixture = ViewBag.Fixture;
}

<h1>My Prediction for</h1>
<h2>@fixture Id=@Model.Id</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="UpdateMyPrediction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                
                <label asp-for="Id" class="control-label"></label>
                @if (Model.Id == 9999)
                {
                    
                    @Html.DisplayFor(modelItem => Model.Id)<span><b> {new} </b></span>
                }
                else
                {
                    @Html.DisplayFor(modelItem => Model.Id)
                }
                
                @*<input readonly asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <label asp-for="FixtureId" class="control-label"></label>
                <input readonly asp-for="FixtureId" class="form-control" />
                <span asp-validation-for="FixtureId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input readonly asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HomeTeamScore" class="control-label"></label>
                <input asp-for="HomeTeamScore" class="form-control" />
                <span asp-validation-for="HomeTeamScore" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AwayTeamScore" class="control-label"></label>
                <input asp-for="AwayTeamScore" class="form-control" />
                <span asp-validation-for="AwayTeamScore" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="UpdatedDate" class="control-label"></label>
                <input asp-for="UpdatedDate" class="form-control" />
                <span asp-validation-for="UpdatedDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-route-id="@Model.FixtureId" asp-action="GetPredictionsByFixture">Back to Prediction</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
