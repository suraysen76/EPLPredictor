@model IEnumerable<SS1892.EPLPredictor.Models.TeamModel>

@{
    var role = AuthModel.Role;
    ViewData["Title"] = "Premier League Table";
}

<h1>Premier League Table</h1>

<p>
    @*<a asp-action="Create">Create New</a>*@
</p>
<table class="table">
    <thead>
        <tr>
            <th>                
                @Html.DisplayNameFor(model => model.Team)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                    <a asp-route-team="@item.Team" asp-controller="Fixtures" asp-action="GetFixtureByTeam">@Html.DisplayFor(modelItem => item.Team)</a>
                
            </td>
            <td>
             @if (@role == "Admin" )
             {
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a><span> | </span>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> <span> | </span>
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
             }
            </td>
        </tr>
}
    </tbody>
</table>
